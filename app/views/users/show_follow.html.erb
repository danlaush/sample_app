<h1><%= @title %></h1>

<div id="sidebar" class="round">
	<%= render 'shared/user_info' %>
	<%= render 'shared/stats' %>
	<% unless @users.empty? %>
		<% @users.each do |user| %>
			<%= link_to gravatar_for(user, :size => 30), user %>
		<% end %>
	<% end %>
</div>

<% unless @users.empty? %>
	<ul class="users">
		<%= render @users %>
	</ul>
	<%= will_paginate @users %>
<% end %>